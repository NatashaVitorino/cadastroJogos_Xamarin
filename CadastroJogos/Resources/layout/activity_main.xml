<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mainscreen"
    android:minWidth="25px"
    android:minHeight="25px">    
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="0.0dp">
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="87.5dp"
            android:id="@+id/txtWhiteSpace" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/lblLogin"
            android:hint="Login"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textColor="@android:color/black"
            android:inputType="" />        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/lblEmail"
            android:hint="E-mail"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textColor="@android:color/black"
            android:inputType="" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/lblSenha1"
            android:hint="Senha"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textColor="@android:color/black"
            android:inputType="" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/lblSenha1Confirm"
            android:hint="Confirme a senha"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textColor="@android:color/black"
            android:inputType="" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/lblDataNasc"
            android:hint="Data de Nascimento"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textColor="@android:color/black"
            android:inputType="" />
        <TextView
            android:text="Selecione seu gÃªnero:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textAlignment="center"
            android:textSize="40px"
            android:textColor="@android:color/black"
            android:id="@+id/lblGenero" />
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rdbGrupo"
            android:gravity="center"
            android:layout_marginBottom="0.0dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:checked="true"
                android:text="Masculino"
                android:id="@+id/rdbMasc" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:text="Feminino"
                android:id="@+id/rdbFem" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:text="Outro"
                android:id="@+id/rdbOutro" />
        </RadioGroup>
        <Button
            android:text="Cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:backgroundTint="#ff552a09"
            android:id="@+id/btnCadastro" />
    </LinearLayout>
</RelativeLayout>